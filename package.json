{
  "name": "emcalc",
  "description": "Barco Event Master Custom Format Calculator",
  "version": "1.1.0",
  "homepage": "https://e2.garethnunns.com",
  "license": "Copyright Gareth Nunns 2020",
  "author": "Gareth Nunns <gareth@garethnunns.com>",
  "repository": "https://github.com/garethnunns/EMCalc",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "desktop": "expo-electron start",
    "eject": "expo eject",
    "test": "mocha --require @babel/register",
    "build-web": "expo build:web",
    "build-desktop": "yarn electron-webpack && yarn electron-builder"
  },
  "dependencies": {
    "color": "^3.1.2",
    "expo": "~37.0.3",
    "mem": "^6.1.0",
    "react": "~16.9.0",
    "react-dom": "~16.9.0",
    "react-native": "https://github.com/expo/react-native/archive/sdk-37.0.1.tar.gz",
    "react-native-paper": "^3.10.1",
    "react-native-web": "~0.11.7"
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@expo/electron-adapter": "0.0.0-alpha.54",
    "@expo/webpack-config": "^0.12.6",
    "babel-preset-expo": "~8.1.0",
    "electron": "^13.6.6",
    "electron-builder": "^22.6.0",
    "mocha": "^7.1.2"
  },
  "private": true,
  "build": {
    "appId": "com.garethnunns.emcalc",
    "productName": "EM Calc",
    "extraMetadata": {
      "main": "main.js"
    },
    "files": [
      {
        "from": "dist/main/",
        "to": "./",
        "filter": ["**/*"]
      },
      {
        "from": "dist/renderer",
        "to": "./",
        "filter": ["**/*"]
      },
      "package.json",
      "**/node_modules/**/*"
    ],
    "mac": {
      "target": "zip",
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "identity": null
    },
    "linux": {
      "target": "AppImage"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "deleteAppDataOnUninstall": true
    }
  }
}
